<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="org.oscarehr.PMmodule.model">
	<class name="Consent" table="consent">
		<id column="id" length="11" name="Id" type="java.lang.Integer" unsaved-value="0">
			<generator class="sequence">
   			 <param name="sequence">seq_consent_id</param>
			</generator>

		</id>
		<property column="demographic_no" length="11" name="demographicNo" not-null="true" type="java.lang.Integer" />
		<property column="provider_no" name="ProviderNo" not-null="true" type="java.lang.String" />
		<property column="provider_name" name="ProviderName" not-null="false" type="java.lang.String" />
		<property column="date_signed" name="dateSigned" not-null="false" type="java.sql.Timestamp" />
		<property column="answer_1" name="answer1" not-null="false" type="java.lang.Integer" />
		<property column="answer_2" name="answer2" not-null="false" type="java.lang.Integer" />
		<property column="answer_3" name="answer3" not-null="false" type="java.lang.Integer" />
		<property column="status" name="status" not-null="false" type="java.lang.String" />
		<property column="hardcopy" name="hardcopy" not-null="false" type="boolean" />
		<property column="location" name="location" not-null="false" type="java.lang.String" />
		<property column="form_name" name="formName" not-null="false" type="java.lang.String" />
		<property column="form_version" name="formVersion" not-null="false" type="java.lang.String" />
		<property column="signature_declaration" name="signatureDeclaration" not-null="false" type="boolean" />
		<property column="exclusions" name="exclusionString" not-null="false" type="java.lang.String" />
		<property column="refused" name="refusedToSign" not-null="false" type="boolean" />
	</class>
</hibernate-mapping>
