<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="org.oscarehr.PMmodule.model">
	<class name="QuatroIntakeHeader" table="intake">
		<id name="id" type="integer" column="intake_id">
			<generator class="sequence">
   			 <param name="sequence">seq_intake_id</param>
			</generator>
		</id>

		<property name="clientId" column="client_id" type="integer" not-null="true" length="10" />
		<property name="staffId" column="staff_id" type="string" not-null="true" length="6" />
	    <property name="staffName" lazy="true" formula="(select concat(p.last_name, concat(', ', p.first_name)) from Provider p where p.provider_no=staff_id)"></property> 
		<property name="createdOn" column="creation_date" type="calendar" not-null="true" />
		<property name="endDate" column="end_date" type="calendar" not-null="false" />
		<property name="intakeStatus" column="intake_status"/>
		<property name="programId" column="program_id" type="integer" not-null="true" length="11" />
	    <property name="programType" lazy="false" formula="(select p.type from program p where p.program_Id=program_id)"></property> 
	    <property name="programName" lazy="false" formula="(select p.name from program p where p.program_Id=program_id)"></property> 
	</class>
</hibernate-mapping>