<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="org.oscarehr.PMmodule.model">
	<class name="Program" table="program">
		<id column="program_id" name="id" type="integer" unsaved-value="0">
			<generator class="native" />
		</id>
		<property name="facilityId" column="facility_id" />
		<property name="shelterId" column="shelter_id" />
		<property name="userDefined" column="userDefined" type="boolean" length="1" />
		<property name="numOfMembers" lazy="true" type="integer" formula="(select count(*) from intake adm where adm.program_id = program_id and adm.intake_status in('active', 'admitted'))" />
		<property name="queueSize" type="integer" formula="(select count(*) from program_queue pq where pq.program_id = program_id)" />
		<property name="maxAllowed" column="max_allowed" type="integer" not-null="false" length="6" />
		<property name="type" column="type" type="string" not-null="false" length="50" />
		<property name="descr" column="descr" type="string" not-null="false" length="255" />
		<property name="address" column="address" type="string" not-null="false" length="255" />
		<property name="phone" column="phone" type="string" not-null="false" length="255" />
		<property name="fax" column="fax" type="string" not-null="false" length="255" />
		<property name="url" column="url" type="string" not-null="false" length="255" />
		<property name="email" column="email" type="string" not-null="false" length="255" />
		<property name="emergencyNumber" column="emergency_number" type="string" not-null="false" length="255" />
		<property name="location" column="location" type="string" not-null="false" length="70" />
		<property name="name" column="name" type="string" not-null="true" length="70" />
		<property name="holdingTank" column="holding_tank" type="boolean" not-null="false" length="1" />
		<property name="allowBatchAdmission" column="allow_batch_admission" type="boolean" not-null="false" length="1" />
		<property name="allowBatchDischarge" column="allow_batch_discharge" type="boolean" not-null="false" length="1" />
		<property name="hic" column="hic" type="boolean" not-null="false" length="1" />
		<property name="programStatus" column="program_status" type="string" not-null="true" />
		<property name="intakeProgram" column="intake_program" type="integer" not-null="false" length="10" />
		<property name="bedProgramLinkId" column="bed_program_link_id" type="integer" not-null="false" length="10" />
		<property name="manOrWoman" column="manOrWoman" type="string" not-null="false" length="6"/>
		<property name="transgender" column="transgender" type="boolean" not-null="false" length="1"/>
		<property name="firstNation" column="firstNation" type="boolean" not-null="false" length="1"/>
		<property name="bedProgramAffiliated" column="bedProgramAffiliated" type="boolean" not-null="false" length="1"/>
		<property name="alcohol" column="alcohol" type="boolean" not-null="false" length="1"/>
		<property name="abstinenceSupport" column="abstinenceSupport" type="string" not-null="false" length="20"/>
		<property name="physicalHealth" column="physicalHealth" type="boolean" not-null="false" length="1"/>
		<property name="mentalHealth" column="mentalHealth" type="boolean" not-null="false" length="1"/>
		<property name="housing" column="housing" type="boolean" not-null="false" length="1"/>
		<property name="exclusiveView" column="exclusive_view" type="string" not-null="false" length="20"/>
		<property name="ageMin" column="ageMin" type="integer" not-null="true" length="10" />
		<property name="ageMax" column="ageMax" type="integer" not-null="true" length="10" />
		<property name="capacity_funding" column="capacity_funding" type="integer" not-null="false" length="10" />
		<property name="capacity_space" column="capacity_space" type="integer" not-null="false" length="10" />
        <property name="maximumServiceRestrictionDays" column="maximum_restriction_days" type="integer" not-null="false" length="11"/>
        <property name="defaultServiceRestrictionDays" column="default_restriction_days" type="integer" not-null="false" length="11"/>
		<property name="orgCd" formula="(select l1.codetree from lst_orgcd l1 where l1.code='P'||program_id)" update="false"/>
		<property name="facilityDesc" formula="(select fac.name from facility fac where fac.id=facility_id)"></property>
		
		<property name="capacity_actual" type="integer" formula="(select count(b.bed_id) from Bed b, Room r where b.room_id = r.room_id and r.program_id = program_id and b.facility_id = facility_id)" />
    </class>
</hibernate-mapping>
