<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.oscarehr.PMmodule.model.RoomDemographicHistorical" table="room_demographic_historical">
		<id name="recordId" type="integer" column="recordid" unsaved-value="0">
			<generator class="sequence">
   			 <param name="sequence">seq_roomdemographic_id</param>
			</generator>
		</id>
        <property name="roomId" type="integer">
                <column name="room_id" />
        </property>
        <property name="admissionId" type="integer">
              <column name="admission_id" />
        </property>
        <property name="demographicNo" type="integer">
            <column name="demographic_no" />
        </property>
        <property name="bedId" column="bed_id" />
        <property name="usageStart" >
            <column name="usage_start" />
        </property>
        <property name="usageEnd" >
            <column name="usage_end" />
        </property>
		<property name="roomName" formula="(select r.name from room r where r.room_id=room_id)" /> 
		<property name="bedName" formula="(select b.name from bed b where b.bed_id=bed_id)" /> 
        <property name="lastUpdateDate" column="lastupdatedate"></property>
		<property name="lastUpdateUser" column="lastupdateuser"></property>
    </class>
</hibernate-mapping>