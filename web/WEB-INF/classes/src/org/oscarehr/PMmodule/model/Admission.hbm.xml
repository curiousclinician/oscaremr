<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="org.oscarehr.PMmodule.model">
	<class name="Admission" table="admission">
		<id column="am_id" name="Id" type="java.lang.Integer">
			<generator class="native" />
		</id>
		<property column="provider_No" name="ProviderNo" />
		<property column="admission_Status" length="24"	name="admissionStatus" not-null="false" type="string" />
		<property column="client_id" length="11" name="clientId" not-null="true" type="integer" />
		<property column="admission_date" length="19" name="admissionDate" not-null="false" type="timestamp" />		
		<property column="admission_from_transfer"	name="admissionFromTransfer" />
		<property column="admission_notes" name="admissionNotes" not-null="false" type="string" />
		<property column="temp_admission" length="1" name="tempAdmission" not-null="false" type="string" />
		<property column="program_id" length="11" name="programId"	not-null="true" type="integer" />
		<property column="temp_admit_discharge" length="1"	name="tempAdmitDischarge" not-null="false" type="string" />
		<property column="radiodischargereason" length="3" name="radioDischargeReason" not-null="false" type="string" />
		<property name="radioDischargeReasonDesc" type="string" formula="(select t.description from lst_discharge_reason t where t.code = radioDischargeReason)" />			
		<property column="discharge_notes" name="dischargeNotes" type="string" not-null="false" />
		<property column="communityprogramcode" length="10" name="communityProgramCode" not-null="false" type="string" />
		<property name="communityProgramDesc" type="string" formula="(select t.description from lst_community_program t where t.code = communityProgramCode)" />		
		<property column="transportationtype" length="10"	name="transportationType" not-null="false" type="string" />
		<property name="transportationTypeDesc" type="string" formula="(select t.description from lst_transportation_type t where t.code = transportationType)" />
		<property column="discharge_date" length="19"	name="dischargeDate" not-null="false" type="timestamp" />
		<property column="discharge_from_transfer"	name="dischargeFromTransfer" />
		<property column="team_id" name="teamId" not-null="false"	type="integer" />
		<property name="intakeId" column="intake_id" type="integer"></property>
		<property name="teamName" type="string" formula="(select t.name from program_team t where t.team_id = team_id)" />
		<many-to-one name="team" class="org.oscarehr.PMmodule.model.ProgramTeam" column="team_id"
			update="false" insert="false" lazy="false" not-found="ignore" />
		<property column="clientstatus_id" name="clientStatusId" not-null="false" type="integer" />
		<property column="automatic_discharge" name="AutomaticDischarge" />
		<many-to-one name="clientStatus" class="org.oscarehr.PMmodule.model.ProgramClientStatus"
			column="clientstatus_id" update="false" insert="false" lazy="false" not-found="ignore" />
		<many-to-one name="client"
			class="org.oscarehr.PMmodule.model.Demographic" column="client_id"
			update="false" insert="false" lazy="false" />
		<property name="programName" type="string"
			formula="(select p.name from program p where p.program_id = program_id)" />
		<property name="programType" type="string"
			formula="(select p.type from program p where p.program_id = program_id)" />
	</class>
</hibernate-mapping>
